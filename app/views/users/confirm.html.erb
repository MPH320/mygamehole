<h2>Confirm your details</h2>
 
 <div class="row">
 
   <div class="col-md-4">
     <h4>Are these values correct?</h4>
     <h5>Email: <%= @user.email%></h5>
     <h5>Name: <%= @user.name%></h5>
   </div>
 </div>
 
 
 <div class="row">
   <div class="col-md-4", style="width: auto;">
     
     <%= button_to "Yes", { :controller => 'users', :action => 'create', :username => params[:user][:name], :email => params[:user][:email], :password => params[:user][:password], :password_confirmation => params[:user][:password_confirmation] }, class: 'btn btn-success' %>
    
   </div>
   <div class="col-md-4", style="width: auto;">
    <%= button_to "No", {:controller => "users", :action => "new"}, class: 'btn btn-failure', :method => :get  %>
   </div>
 </div> 