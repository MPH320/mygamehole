<h1><%= @user.username %>'s GameHole</h1>
<br>
   <% if authorized_profile_edit(@user) %>
     <%= link_to "Add New Game", new_game_path, class: 'btn btn-success' %>
     <%= link_to "Edit your profile", edit_user_path(@user), class: 'btn btn-warning' %>
     <br><br>
   <% end %>
   
  
 
     <% myGames(@user).each do |game| %>
      <div class="media">
       <div class="media-body">
        <h4 class="media-heading"><%= link_to game.title, game %></h4>
        <small><%= game.description %> &nbsp;</small>
        <% if authorized_profile_edit(@user) %>
         <%= link_to "Edit Game", edit_game_path(game), class: 'btn-xs btn-warning' %>
         <%= link_to "Delete Game", game, method: :delete, class: 'btn-xs btn-danger', data: { confirm: 'Are you sure you want to delete this Game?' } %>
        <% end %>
        <br><br> 
       </div>
      </div>
     <% end %>
 
 </div>