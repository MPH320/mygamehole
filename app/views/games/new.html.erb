<% if current_user %>
<h1>New Game</h1>
 
 <div class="row">
   <div class="col-md-8">
     <%= form_for @game do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter game title" %>
       </div>
       <div class="form-group">
         <%= f.label "Enter game description" %>
         <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "This game is awesome."  %>
       </div>
     <div class="form-group">
         <%= f.label "Enter tags for scripts or styles that go in <head>" %>
         <%= f.text_area :style, rows: 8, class: 'form-control',  placeholder: "<style>example</style>" %>
       </div>
       <div class="form-group">
         <%= f.label "the body of your HTML content" %>
         <%= f.text_area :content, rows: 8, class: 'form-control', placeholder: "<canvas id='example'></canvas>" %>
       </div>
       <div class="form-group">
         <%= f.label "Enter tags for scripts or styles that go below <body>" %>
         <%= f.text_area :javascript, rows: 12, class: 'form-control', placeholder: "<script type='text/javascript'>example</script>" %>
       </div>
       
       <%= f.submit "Save", class: 'btn btn-success' %>
     <% end %>
     <br>
   </div>
 </div>
 <% else %>
 <h1>You need to sign in.</h1>
 <% end %>