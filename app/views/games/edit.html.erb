<% if authorized_game_edit(@game) %>
<h1>Edit Game</h1>
 
 <div class="row">
   <div class="col-md-8">
     <%= form_for @game do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, class: 'form-control', placeholder: "Enter game title" %>
       </div>
       <div class="form-group">
         <%= f.label :description %>
         <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter game description" %>
       </div>
       <div class="form-group">
         <%= f.label :url %>
         <%= f.text_field :url, class: 'form-control', placeholder: "Enter game url" %>
       </div>
       <%= f.submit "Save", class: 'btn btn-success' %>
     <% end %>
   </div>
 </div>
 <% else %><br><br>
 <h1>Is this your game?</h1>
 <% end %>